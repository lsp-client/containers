ARG VERSION=4.10.0
FROM docker.io/library/node:22-alpine AS builder
ARG VERSION
WORKDIR /app
RUN apk add --no-cache curl && \
    curl -sf https://gobinaries.com/tj/node-prune | sh && \
    npm install vscode-langservers-extracted@${VERSION} && \
    npm prune --production && \
    /usr/local/bin/node-prune

FROM docker.io/library/node:22-alpine
ARG VERSION
LABEL org.opencontainers.image.title="ESLint LSP" \
      org.opencontainers.image.description="ESLint Language Server" \
      org.opencontainers.image.version="${VERSION}" \
      org.opencontainers.image.source="https://github.com/lsp-client/containers" \
      org.opencontainers.image.licenses="MIT"

WORKDIR /app
COPY --from=builder /app/node_modules ./node_modules
ENV PATH="/app/node_modules/.bin:${PATH}"

WORKDIR /workspace
USER node
ENTRYPOINT ["vscode-eslint-language-server", "--stdio"]
